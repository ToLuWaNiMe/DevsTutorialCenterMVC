                <h3>User Invitation</h3>
            </div>
            <div class="modal-body col-12 px-5">

                <div class="col-12">
                    <div asp-validation-summary="ModelOnly"></div>
                    <form method="post" asp-controller="Home" asp-action="SendDecadevInvite" id="invite-form">
                        <div class="mb-4">
                            <label asp-for="FirstName" class="form-label">Firstname</label>
                            <input type="text" asp-for="FirstName" class="form-control input-ify" />
                            <span asp-validation-for="FirstName" class="text-danger" style="font-size: 10px;"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="LastName" class="form-label">LastName</label>
                            <input type="text" asp-for="LastName" class="form-control input-ify" />
                            <span asp-validation-for="LastName" class="text-danger" style="font-size: 10px;"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input type="text" asp-for="Email" class="form-control input-ify" />
                            <span asp-validation-for="Email" class="text-danger" style="font-size: 10px;"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Stack" class="form-label">Stack</label>
                            <select asp-for="Stack" class="form-control form-select input-ify">
                                <option class="small text-secondary" selected disabled>--- Select Tag Option ---</option>
                                <option value="DotNet">DotNet</option>
                                <option value="Java">Java</option>
                                <option value="Node">Node</option>
                            </select>
                            <span asp-validation-for="Stack" class="text-danger" style="font-size: 10px;"></span>

                        </div>

                        <div class="mb-5">
                            <label asp-for="SquadNumber" class="form-label">Squad Number</label>
                            <input type="text" asp-for="SquadNumber" class="form-control input-ify" />
                            <span asp-validation-for="SquadNumber" class="text-danger" style="font-size: 10px;"></span>
                        </div>

                        <div class="d-flex flex-column justify-content-center pb-3" >
                            <button type="button" class="btn mb-2" style="background-color: #34A853;" id="modal-btn" onclick="SendInviteForm()">Send Invite</button>
                        </div>
                        @Html.AntiForgeryToken()
                    </form>
                    @section Scripts {
                        @{
                            <partial name="_ValidationScriptsPartial" />
                        }
                    }
                </div>
            </div>

<div class="container" style=" background: white; justify-content: flex-start; align-items: center; display: inline-flex">
    <img style="max-width: 100%; height: auto; position: relative; background: linear-gradient(0deg, white 0%, white 100%)" src="@Model.ImageUrl" asp-append-version=true />
    <div style="width: 292px; padding: 16px; flex-direction: column; justify-content: flex-start; align-items: flex-start; gap: 8px; display: inline-flex">
        <div style="align-self: stretch; color: #101828; font-size: 20px; font-family: Inter-Medium, Helvetica; font-weight: 500; line-height: 28px; word-wrap: break-word">@Model.Title</div>
        <div style="color: #98A2B3; font-size: 14px; font-family: Inter-Regular, Helvetica; font-weight: 400; line-height: 20px; word-wrap: break-word">@Model.Text</div>
        <div style="align-self: stretch; height: 0px; border: 0.50px #D0D5DD solid"></div>
        <div style="align-self: stretch; flex: 1 1 0; justify-content: space-between; align-items: center; display: inline-flex">
            <div style="opacity: 0.50; color: #475467; font-size: 12px; font-family: Inter-Regular, Helvetica; font-weight: 400; line-height: 12px; letter-spacing: 0.50px; word-wrap: break-word">@Model.ReadTime</div>
            <div style="opacity: 0.50; color: #475467; font-size: 12px; font-family: Inter-Regular, Helvetica; font-weight: 400; line-height: 12px; letter-spacing: 0.50px; word-wrap: break-word">@Model.CreatedOn</div>
        </div>
    </div>
</div>
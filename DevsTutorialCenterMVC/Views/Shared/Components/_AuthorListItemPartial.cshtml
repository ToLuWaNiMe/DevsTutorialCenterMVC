@model AuthorListItemViewModel;

<div class="flex items-center justify-between rounded bg-white p-2">
    <div class="flex space-x-2">
        <img class="aspect-square w-12 rounded-full object-cover object-center" src="@Model.Image" alt=""/>
        <div class="flex flex-col justify-between py-1">
            <p>@Model.Name</p>
            <p class="text-xs tracking-wide text-slate-400">@Model.Designation</p>
        </div>
    </div>
    <p class="text-xs text-slate-400">@Model.NumberOfArticles.ToString() articles</p>
</div>
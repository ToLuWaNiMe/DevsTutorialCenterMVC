@using DevsTutorialCenterMVC.Utilities
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model StoryArticlesVM;

<a class="flex flex-col-reverse space-y-5 md:flex-row md:space-y-0 md:space-x-5" asp-controller="Articles" asp-action="GetSingleArticle" asp-route-id="@Model.Id">
    <div class="w-full md:w-2/3 space-y-2">
        <p class="text-gray-800 font-semibold text-xl">@Model.Title</p>
        <p>
            @Model.Text.ShortenText(50)
        </p>
        <div class="flex items-center space-x-8">
            <div class="flex items-center">
                <div>
                    <p class="text-gray-400">Submitted on &mdash; </p>
                </div>
            </div>
            <p class="text-gray-400">@Model.SubmittedOn</p>
        </div>
    </div>
    <img class="aspect-[16/10] w-full md:w-1/3 h-auto overflow-hidden object-cover object-center" src="@Model.ImageUrl" alt="Article Image"/>
</a>
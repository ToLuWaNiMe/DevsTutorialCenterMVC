@model StoryArticlesVM;

<div class="flex flex-col-reverse space-y-5 md:flex-row md:space-y-0 md:space-x-5">
    <div class="w-full md:w-2/3 space-y-2">

        <div class="flex items-center space-x-4">
            <div class="w-4 border-t border-gray-300"></div>
        </div>
        <p class="text-gray-800 font-semibold text-xl">@Model.Title</p>
        <p>@Model.Text</p>
        <div class="flex items-center space-x-8">
            <div class="flex items-center">
                <div>
                    <p class ="text-gray-400">Submitted on &mdash;</p>
                </div>
            </div>
            <p class="text-gray-400">@Model.SubmittedOn</p>
        </div>
    </div>
    <img class="aspect-[16/10] w-full md:w-1/3 h-auto overflow-hidden object-cover object-center" src="https://via.placeholder.com/280x204" alt="Article Image" />
</div>
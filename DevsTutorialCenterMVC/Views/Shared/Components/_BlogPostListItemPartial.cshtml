@using DevsTutorialCenterMVC.Utilities
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BlogPostListItemVM;

<a class="flex justify-between space-x-5" asp-controller="Articles" asp-action="GetSingleArticle" asp-route-id="@Model.Id">
    <div class="w-2/3 flex flex-col justify-evenly">
        <div class="flex items-center  justify-between">
            <div class="flex items-center">
                <img class="mr-2 mb-2 aspect-square w-12 rounded-full text-gray-900" src="@Model.ImageUrl"/>
                <div>
                    <p>@Model.Author.Name</p>
                    <p class="text-xs tracking-wide text-slate-400">@Model.Author.Designation</p>
                </div>
            </div>
            <p class="text-gray-400">@Model.CreatedOn</p>
        </div>


        <div class="flex items-center mb-2 space-x-4">
            <partial name="Components/_TagComponentPartial" model="@Model.Tag"/>
            <div class="w-4 border-t border-gray-300"></div>
            <div class="text-gray-700">@Model.ReadTime read</div>
        </div>
        <p class="text-gray-800 font-semibold text-xl">@Model.Title</p>
        <p>
            @Model.Text.ShortenText(50)
        </p>
    </div>
    <img class="aspect-[16/10] w-1/3 overflow-hidden object-cover object-center" src="@Model.ImageUrl"/>
</a>

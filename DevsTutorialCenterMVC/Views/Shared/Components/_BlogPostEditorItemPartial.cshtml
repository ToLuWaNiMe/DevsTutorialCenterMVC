@model DevsTutorialCenterMVC.Models.Components.BlogPostEditorItemViewModel

<link rel="stylesheet" href="~/css/blog_post_editor_item_partial.css" asp-append-version="true" />


<div class="editor-blogpost-component">
    <div class="text-box">
        <h3 class="text-1">
            @Model.Title
        </h3>
        <p class="text-2">
            @Model.Text
        </p>
        <div class="submit-date">
            <h6 class="submitted">Submitted</h6>
            <div class="line-submit-date"></div>
            <div class="sub-date">@Model.CreatedOn</div>
        </div>
    </div>

    <div class="image-box">
        @Model.ImageUrl
    </div>
    <div class="btn-box">
        <button class="approve-btn">Approve</button>
        <button class="decline-btn">Decline</button>
    </div>
</div>
<div class="dtc-3-line-4"></div>
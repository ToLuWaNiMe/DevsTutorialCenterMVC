@model BlogPostItemVM;

<div class="">
    <img class="aspect-[16/10] w-full object-cover object-center" src="@Model.ImageUrl"/>
    <div class="p-4">
        <div class="">
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-4">
                    <partial name="_TagComponentPartial" model="@Model.Tag" />
                    <div class="w-4 border-t border-gray-300"></div>
                    <div class="text-gray-700">@Model.ReadTime read</div>
                </div>
            </div>
        </div>
        <div class="mt-2 text-xl font-semibold">@Model.Title</div>
        <div class="mt-2">@Model.Text</div>
        <div class="my-3 border-t border-gray-100"></div>
        <div class="flex items-center justify-between">
            <div class="flex items-center">
                <img class="mr-2 aspect-square h-10 rounded-full text-gray-900" src="@Model.Author.Image"/>
                <h5>@Model.Author.Name</h5>
            </div>
            <p class="text-gray-400">@Model.CreatedOn</p>
        </div>
    </div>
</div>

    <div class="login">
        <form method="post" asp-action="Login" asp-controller="Account">
            <div class="frame-wrapper">
                <div class="frame">
                    <div class="login-authentication">
                        <div class="div">
                            <div class="frame-2"><img class="blogger" src="~/images/blogger.svg" /></div>
                            <div class="text">Welcome back</div>
                        </div>
                        <div class="frame-3">
                            <div class="frame-4">
                                <div class="frame-4">
                                    <div class="button-default">
                                        <img class="img" src="~/images/google-1.svg" />
                                        <div class="text-wrapper">
                                            <a asp-action="WithAccount" asp-controller="Account">Sign in with Google</a>
                                        </div>
                                    </div>
                                    <div class="frame-5">
                                        <div class="divider"><img class="vector" src="~/images/vector-1.svg" /></div>
                                        <div class="text-2">OR</div>
                                        <div class="vector-wrapper"><img class="vector" src="~/images/vector-2.svg" /></div>
                                    </div>
                                </div>
                                <div class="frame-6">
                                    <div class="frame-7">
                                        <div class="frame-8">
                                            <div class="text-3">Email Address</div>
                                            <input class="button-default-2" placeholder="Enter your email" />
                                        </div>
                                        <div class="frame-8">
                                            <div class="text-3">Password</div>
                                            <input class="button-default-2" placeholder="****************" />
                                        </div>
                                    </div>
                                    <div class="text-5">Forgot password</div>
                                </div>
                            </div>
                            <div class="frame-10">
                                <button class="CTA-default"><div class="text-6">Login</div></button>
                                <p class="p">
                                    <span class="span">Don’t have an account ? </span><a asp-action="SignUp" asp-controller="Account">Sign Up Here</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>

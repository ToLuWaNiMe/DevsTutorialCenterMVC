@model SignUpViewModel

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-12345..." crossorigin="anonymous" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" integrity="sha384-12345..." crossorigin="anonymous" />

<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="px-8 py-6 mx-4 mt-4 text-left bg-white shadow-lg md:w-1/3 lg:w-1/3 sm:w-1/3">

        <div class="flex justify-center">
            <img class="dtc-7-blogger" src="~/images/blogger.svg" />
        </div>
        <h3 class="text-2xl font-bold font-med text-center">Create a new account</h3>

        <div class="flex items-center gap-4">
            <div class="border-b border-gray-300 w-1/2"></div>
            <div class="text-gray-400">OR</div>
            <div class="border-b border-gray-300 w-1/2"></div>
        </div>

        <button class="bg-white border py-2 w-full rounded-xl mt-5 flex justify-center items-center text-sm">
            <img src="~/images/google-1.svg" />
            <a asp-action="WithAccount" asp-controller="Account">Sign Up with Google</a>
        </button>

        <form method="post" asp-action="SignUp" asp-controller="Account">
            <input asp-for="Token" hidden />

            <div class="mt-4">
                <div>
                    <label class="block font-semibold" for="FirstName">First Name</label>
                    <input type="text" placeholder="Enter your full names" class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600">
                    <span asp-validation-for="FirstName" class="text-red-500 text-xs"></span>
                </div>

                <div class="mt-4">
                    <label class="block font-semibold" for="LastName">Last Name</label>
                    <input type="text" placeholder="Enter your full names" class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600">
                    <span asp-validation-for="LastName" class="text-red-500 text-xs"></span>
                </div>

                <div class="mt-4">
                    <label class="block font-semibold" for="Email">Email Address</label>
                    <input type="text" placeholder="Enter your email" class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none  focus:ring-1 focus:ring-blue-600">
                    <span asp-validation-for="Email" class="text-red-500 text-xs"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="SquadNumber" class="block text-gray-700 text-sm font-bold mb-2"><div class="text-gray-900 text-base font-semibold leading-snug tracking-tight">Squad Number</div></label>
                    <select asp-for="SquadNumber" class="w-full p-2 border rounded">
                        <option value="12">Squad 12</option>
                        <option value="16">Squad 16</option>
                        <option value="18">Squad 18</option>
                    </select>
                    <span asp-validation-for="SquadNumber" class="text-red-500 text-xs"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Stack" class="block text-gray-700 text-sm font-bold mb-2"><div class="text-gray-900 text-base font-semibold leading-snug tracking-tight">Stack</div></label>
                    <select asp-for="Stack" class="w-full p-2 border rounded">
                        <option value="DotNet">DotNet</option>
                        <option value="Java">Java</option>
                        <option value="Node">Node</option>
                    </select>
                    <span asp-validation-for="Stack" class="text-red-500 text-xs"></span>
                </div>

                <div class="mt-4">
                    <label class="block font-semibold">Password</label>
                    <div class="relative">
                        <input type="password" placeholder="************" class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600" id="password">
                        <span asp-validation-for="Password" class="text-red-500 text-xs"></span>
                        <div class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-400 cursor-pointer" id="togglePassword">
                            <i class="fas fa-eye text-sm"></i>
                        </div>
                    </div>
                </div>

                <div class="mt-4">
                    <label class="block font-semibold">Confirm Password</label>
                    <div class="relative">
                        <input type="password" placeholder="************" class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600" id="confirmPassword">
                        <span asp-validation-for="ConfirmPassword" class="text-red-500 text-xs"></span>
                        <div class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-400 cursor-pointer" id="toggleConfirmPassword">
                            <i class="fas fa-eye text-sm"></i>
                        </div>
                    </div>
                </div>

                <div class="flex">
                    <button class="w-full px-6 py-2 mt-4 text-white bg-green-600 rounded-lg hover:bg-blue-900">Register</button>
                </div>

                <div class="mt-6 text-grey-dark">
                    Already have an account?
                    <a asp-action="Login" asp-controller="Account" class="text-green-600">Sign In Here</a>
                </div>
            </div>
        </form>
    </div>
</div>

<<script>
     document.addEventListener('DOMContentLoaded', function () {
         const togglePassword = document.getElementById('togglePassword');
         const toggleConfirmPassword = document.getElementById('toggleConfirmPassword');
         const passwordInput = document.getElementById('password');
         const confirmPasswordInput = document.getElementById('confirmPassword');

         togglePassword.addEventListener('click', function () {
             const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
             passwordInput.setAttribute('type', type);
         });

         toggleConfirmPassword.addEventListener('click', function () {
             const type = confirmPasswordInput.getAttribute('type') === 'password' ? 'text' : 'password';
             confirmPasswordInput.setAttribute('type', type);
         });
     });
</script>





@model LibraryPageVM

<div class="flex flex-col justify-start items-start border border-red-600 p-10 md:flex-row md:space-x-10 ">
    <div class="flex flex-col space-y-8 border border-red-600 md:w-3/4">
        @foreach (var read in Model.ReadArticles)
        {
            <partial name="Components/_BlogPostListItemPartial" model="@read" />
        }
    </div>

    <div class="flex flex-col space-y-5 w-full border border-red-600 sm:mt-5 md:mt-0 md:w-2/5">
        <div>
            <p class="font-semibold">AUTHORS</p>
            <div>
                @foreach (var topAuthor in Model.TopAuthors)
                {
                    <partial name="Components/_AuthorListItemPartial" model="@topAuthor" />
                }
            </div>
        </div>

        <div>
            <p class="font-semibold">MORE TOPICS</p>
            <div>
                @foreach(var tag in Model.AllTags)
                {
                    <partial name="Components/_TagComponentPartial" model="@tag" />
                }
            </div>

        </div>
    </div>
</div>




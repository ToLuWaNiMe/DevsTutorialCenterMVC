@model LibraryPageVM

<div class="flex flex-col border border-red-600 p-10 md:flex-row md:justify-between md:space-x-10">
    <div class="flex flex-col space-y-8">
        @foreach (var read in Model.ReadArticles)
        {
            <partial name="Components/_BlogPostListItemPartial" model="@read" />
        }
    </div>

    <div class="flex flex-col space-y-5 sm:mt-5 md:mt-0">
        <div>
            <p class="font-semibold">AUTHORS</p>
            @foreach (var topAuthor in Model.TopAuthors)
            {
                <partial name="Components/_AuthorListItemPartial" model="@topAuthor" />
            }
        </div>
    </div>
</div>



